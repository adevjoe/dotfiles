#!/bin/bash
# SHEEL TOOL
# Easy to tap command
# Author: adevjoe
# Usage: source $HOME/.st/.source

ST_PATH=${HOME}/.st
export PATH=$PATH:${ST_PATH}:${ST_PATH}/func

# ALIAS
unalias grv
alias zshconfig="mate ~/.zshrc"
alias ohmyzsh="mate ~/.oh-my-zsh"
alias vi=vim
alias ll="ls -alFh"
alias dc=docker-compose
alias proxy="export http_proxy='http://127.0.0.1:8123' export https_proxy='http://127.0.0.1:8123'"
alias disproxy='unset http_proxy https_proxy'
alias pg="ps aux | head -1; ps aux | grep -v grep | grep"
alias myip="curl -s http://whatismyip.akamai.com/"
alias avd=$ANDROID_HOME"/tools/emulator -avd"
alias rn="react-native"
alias k="kubectl"

# ENV
# Golang
export PATH=$PATH:/usr/local/go/bin
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

# NDK
export ANDROID_NDK=$HOME/Android/Ndk
export PATH=$PATH:$ANDROID_NDK

# Android
ANDROID_PATH=$HOME/Android/Sdk
if [ "$(uname -s)" = "Darwin" ]; then ANDROID_PATH=$HOME/Library/Android/Sdk; fi
export ANDROID_HOME=$ANDROID_PATH
export PATH=$PATH:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools

# Flutter
export PUB_HOSTED_URL=https://pub.flutter-io.cn
export FLUTTER_STORAGE_BASE_URL=https://storage.flutter-io.cn
export PATH=$PATH:/usr/local/flutter/bin

# Editor
export VISUAL="vim"

# NVM
export NVM_DIR="$HOME/.nvm"
# [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
export PATH=$PATH:$HOME/.nvm/versions/node/v9.10.1/bin:/usr/local/node/bin

# Autojump
[[ -s ~/.autojump/etc/profile.d/autojump.sh ]] && . ~/.autojump/etc/profile.d/autojump.sh

# OtherEnv
if [ -f $ST_PATH/.otherEnv ]; then source $ST_PATH/.otherEnv; fi
